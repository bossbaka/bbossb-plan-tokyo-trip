---
import { Image } from "astro:assets";
const { title, body, picture, alt } = Astro.props;
---

<div class="Card">
  <Image src={picture} alt={alt} class="img" />
  <div class="Card-Bg">
    <h2 class="Card-Title">{title}</h2>
    <span class="Card-Body">{body}</span>
    <div class="Card-Bottom"></div>
  </div>
</div>

<style>
  .Card {
    border-radius: 12px;
    border: solid 2px;
    overflow: hidden;
    position: relative;
    margin-bottom: 1rem;
  }
  .Card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .Card-Bg {
    position: absolute;
    padding: 30px 20px 20px 20px;
    width: 100%;
    height: auto;
    bottom: 0;
    background: linear-gradient(transparent, rgb(0, 0, 0));
  }
  .Card-Title {
  }
</style>
