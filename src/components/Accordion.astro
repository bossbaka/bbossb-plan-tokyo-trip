---
// @ts-nocheck
const { item } = Astro.props;
---

<div>
  <details name="my-accordion">
    <summary>{item.infoname}</summary>
    <div>
      <ul>
        {
          item.path.map((sub) => (
            <li>
              <a href={sub.link} target="_blank">
                {sub.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </details>
</div>

<style>
  summary {
    background-color: rgb(132 132 132 / 27%);
    color: white;
    cursor: pointer;
    padding: 7px;
    border-radius: 7px;
  }

  details {
    margin: 3px 20px;
    border-radius: 10px;
    border: 1px solid #f0f5f9;
    padding: 3px;
  }

  details[open] summary {
    background-color: #f0f5f9;
    color: black;
    border-radius: 5px;
  }

  details div {
    margin: 10px 0px;
  }

  li {
    margin: 10px 0px;
  }
  .emptyimage {
    margin: 10px;
  }
</style>
