---
// @ts-nocheck
const { days, station, imagepath, imagename } = Astro.props;
---

<div>
  <>
    <p class="accordion-p">{days}</p>
    <details name="my-accordion">
      <summary>{station}</summary>
      <p>
        <div class="zoomist-container">
          <div class="zoomist-wrapper">
            <div class="zoomist-image">
              <img src={imagepath} alt={imagename} width="50" height="50" />
            </div>
          </div>
        </div>
      </p>
    </details>
  </>
</div>

<style>
  summary {
    background-color: rgb(132 132 132 / 27%);
    color: white;
    cursor: pointer;
    padding: 13px;
  }

  details {
    margin: 3px 0px;
    border-radius: 10px;
    border: 1px solid #f0f5f9;
    padding: 3px;
  }

  details[open] summary {
    background-color: #f0f5f9;
    color: black;
    border-radius: 5px;
  }
  .accordion-p {
    margin: 10px 0;
  }

  img {
    display: block;
    width: 100%;
    height: auto;
  }

  details div {
    text-align: center;
  }
  .zoomist-container {
    margin: 10px;
  }
  .zoomist-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .emptyimage {
    margin: 10px;
  }
</style>

<script>
  // @ts-nocheck
  new Zoomist(".zoomist-container", {
    // Optional parameters
    maxScale: 4,
    bounds: true,
    // if you need slider
    slider: true,
    // if you need zoomer
    zoomer: true,
  });
</script>
